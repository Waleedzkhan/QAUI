@model Answer
@{ Layout = "_Layout"; ViewBag.Title = "Add an answer";}

<h2>Add an Answer <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddAnswer" method="post">
    <div class="form-group">
        <label for="Body">Body:</label>
        <input class="form-control" name="Body" />
    </div>
    <div class="form-group">
        <label for="Accepted">Accepted:</label>
        <input class="form-control" name="Accepted" />
    </div>
    
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Answer</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Body</th><th>Accepted</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Body</td>
                <td>@Model.Accepted</td>
                
            </tr>
        </tbody>
    </table>
}