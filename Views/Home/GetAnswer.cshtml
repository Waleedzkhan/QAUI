@model Answer
@{ Layout = "_Layout"; ViewBag.Title = "Get Answer by Id";}

<h2>Get Answer by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input class="form-control" name="Id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Answer</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Answer</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Body</th><th>Accepted</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Body</td>
                <td>@Model.Accepted</td>

            </tr>
        </tbody>
    </table>
}