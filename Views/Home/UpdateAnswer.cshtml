@model Answer
@{ Layout = "_Layout"; ViewBag.Title = "Update an Answer";}

<h2>Update an Answer <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post" asp-action="UpdateAnswer">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Body"></label>
        <input class="form-control" asp-for="Body" />
    </div>
    <div class="form-group">
        <label asp-for="Accepted"></label>
        <input class="form-control" asp-for="Accepted" />
    </div>
    
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Answer</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Body</th><th>Accepted</th></tr></thead>
        <tbody>
            <tr>
                <td>Id</td>
                <td>Body</td>
                <td>Accepted</td>
                
            </tr>
        </tbody>
    </table>
}